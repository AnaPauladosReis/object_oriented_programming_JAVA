    public static int solicitarQuantidadeProduto(String metodo) {
        int quantidade = Integer.parseInt(JOptionPane.showInputDialog(null, "Informe a quantidade para " + metodo + " ğŸ§®"));
        while(quantidade <= 0) {
            JOptionPane.showMessageDialog(null, "ğŸ¥º Quantidade invÃ¡lida! ğŸ¥º");
