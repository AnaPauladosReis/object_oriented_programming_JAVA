    public static double solicitarPrecoProduto(){
        double preco = Double.parseDouble(JOptionPane.showInputDialog("Informe o valor do produto ğŸ’°"));
        while(preco <= 0) {
            Saida.exibirPrecoInvalido();
            preco = Double.parseDouble(JOptionPane.showInputDialog("Informe o valor do produto ğŸ’°"));
        }
        return preco;
    }

